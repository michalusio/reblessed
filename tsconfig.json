{
  "include": ["src/**/*.js", "src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    "target": "ES6",
    "module": "CommonJS",
    // Generate d.ts files
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "strict": true
  }
}
